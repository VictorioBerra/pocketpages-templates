<script server>
  let serverError = null
  if (request.method === 'POST') {
    try {
      signOut()
      redirect(`/`)
    } catch (e) {
      serverError = e.message
    }
  }
</script>

<h3 class="text-2xl font-bold mb-6">Logout</h3>

<% if (serverError) { %>
<div class="alert alert-error mb-4"><%= serverError %></div>
<% } %>

<form method="post" class="card bg-base-100 shadow-md p-6 max-w-sm mx-auto space-y-4">
  <p>Are you sure you want to logout?</p>
  <button type="submit" class="btn btn-primary w-full">Logout</button>
</form>