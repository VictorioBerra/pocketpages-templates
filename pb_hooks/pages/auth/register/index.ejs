<script server>
  let serverError = null
  let fieldErrors = {}

  if (request.method === 'POST') {
    const {
      identity,
      password
    } = body()

    try {
      createUser(identity, password)
      redirect(`/auth/register/success`)
    } catch (e) {
      // Try to extract field-level errors from PocketBase error response
      if (e && e.response && e.response.data) {
        fieldErrors = e.response.data
      }
      serverError = e.message || 'Registration failed.'
    }
  }
</script>

<h2 class="text-3xl font-bold mb-6">Register</h2>

<% if (serverError) { %>
<div class="alert alert-error mb-4"><%= serverError %></div>
<% } %>

<form method="post" class="card bg-base-100 shadow-md p-6 max-w-sm mx-auto space-y-4">
  <div class="form-control">
    <label class="label">
      <span class="label-text">Email Address</span>
    </label>
    <input 
      name="identity" 
      value="<%= data.identity %>" 
      class="input input-bordered w-full validator" 
      required 
      pattern="^[^@\s]+@[^@\s]+\.[^@\s]+$" 
      minlength="5" 
      maxlength="254" />
    <% if (fieldErrors && fieldErrors.email) { %>
      <p class="validator-hint text-error mt-1"><%= fieldErrors.email.message %></p>
    <% } %>
  </div>
  <div class="form-control">
    <label class="label">
      <span class="label-text">Password</span>
    </label>
    <input name="password" type="password" value="<%= data.password %>" class="input input-bordered w-full validator" required 
      minlength="8" 
      maxlength="254"/>
    <% if (fieldErrors && fieldErrors.password) { %>
      <p class="validator-hint text-error mt-1"><%= fieldErrors.password.message %></p>
    <% } %>
  </div>
  <button type="submit" class="btn btn-primary w-full">Register</button>
</form>